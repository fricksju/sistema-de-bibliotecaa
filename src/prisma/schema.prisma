generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./banco.db"
}

model Users {
  id Int @id @default(autoincrement())
  username String @unique 
  password String 
  isAdmin  Boolean @default(false)
}

model Books {
  id Int @id @default(autoincrement())
  titulo String
  autor String
  available Boolean @default(true)
}
